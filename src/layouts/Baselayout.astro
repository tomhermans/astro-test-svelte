---
// src/layouts/BaseLayout.astro
import website from '../configuration.website.js';
 
import '@fontsource/bitter';
import Nav from '../components/Nav.astro';

const {title, cols} = Astro.props;
let buildTime = process.env.VITE_BUILD_TIME;

const { twitterUsername } = website;
---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="stylesheet" href={Astro.resolve("../styles/global.css")} >
  <link rel="stylesheet" href={Astro.resolve("../styles/open-props.min.css")} >
	<style global>
		@import "../styles/home.css";
	</style>

	<style>
    main {
      min-width: 60vw;
    }
		header {
			display: flex;
			flex-direction: column;
			gap: 1em;
			max-width: min(100%, 68ch);
		}
    
	</style>
</head>
<body>
	<main>
		<header>
			<div>
				<img width="60" height="80" src="/assets/logo.svg" alt="Astro logo">
				<h1>Welcome to <a href="https://astro.build/">Astro</a></h1>
			</div>
		</header>
    <p>cols: {cols}</p>

    <Nav />


		<!--

		You can also use imported framework components directly in your markup!
		
		Note: by default, these components are NOT interactive on the client.
		The `:visible` directive tells Astro to make it interactive.
		
		See https://docs.astro.build/core-concepts/component-hydration/ 

		-->
    <h1 class="p-4 bg-blue-200">{title}</h1>
    <p>Here comes the slot:</p>
    <slot />

	</main>
  <footer>
    <div class="box">
      <p>
        <a href="https://astro.build/">Astro</a> is a <a href="https://astro.build/docs/">component library</a> for building web applications.
      </p>
      <p>
        <a href="https://www.twitter.com/{twitterUsername}">{twitterUsername}</a>
      </p>
      <p>
      Site built. {buildTime}
      </p>
    </div>
    
  </footer>
</body>
</html>
